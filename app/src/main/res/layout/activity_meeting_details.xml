<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/activity_meeting_details_activity"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/activity_meeting_details_forms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/activity_meeting_details_forms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        >

        <EditText
            android:inputType="text"
            android:id="@+id/activity_meeting_details_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_meeting_details_subject"
            app:layout_constraintBottom_toTopOf="@id/activity_meeting_details_date"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_details_forms"
            app:layout_constraintVertical_weight="1" />

        <EditText
            android:inputType="date"
            android:id="@+id/activity_meeting_details_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:hint="@string/activity_meeting_details_date"
            app:layout_constraintBottom_toTopOf="@id/activity_meeting_details_time"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_details_subject"
            app:layout_constraintVertical_weight="1"


            />

        <EditText
            android:inputType="time"
            android:id="@+id/activity_meeting_details_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:hint="@string/activity_meeting_details_time"
            app:layout_constraintBottom_toTopOf="@id/activity_meeting_details_people"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_details_date"
            app:layout_constraintVertical_weight="1" />

        <EditText
            android:inputType="text"
            android:id="@+id/activity_meeting_details_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_meeting_details_people"
            app:layout_constraintBottom_toTopOf="@id/activity_meeting_details_chipGroup"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_details_time"
            app:layout_constraintVertical_weight="1" />

        <com.google.android.material.chip.ChipGroup

            android:id="@+id/activity_meeting_details_chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/activity_meeting_details_spinner"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_details_forms"
            app:layout_constraintVertical_weight="1" />

        <Spinner
            android:id="@+id/activity_meeting_details_spinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_details_chipGroup"
            app:layout_constraintVertical_weight="1">


        </Spinner>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>