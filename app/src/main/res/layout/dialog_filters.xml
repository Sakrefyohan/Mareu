<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dialog_image"
        android:src="@drawable/ic_filter_list_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_filter_date"
        app:layout_constraintTop_toBottomOf="parent"
        android:scaleType="center"
        android:background="#0057C3"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/dialog_filter_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_image"
        app:layout_constraintBottom_toTopOf="@id/dialogue_filter_room"
        android:text="@string/filtrer_par_date"
        android:textAlignment="center"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/dialogue_filter_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_filter_date"
        android:fontFamily="sans-serif"
        android:text="@string/filtrer_par_salle"
        android:textAlignment="center"
        android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>